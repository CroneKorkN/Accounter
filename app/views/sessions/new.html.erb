<h2>Eiloggen</h2>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= text_field_tag :email, nil, placeholder: "E-Mail oder Benutzername" %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, placeholder: "Passwort" %>
  </div>
  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>
